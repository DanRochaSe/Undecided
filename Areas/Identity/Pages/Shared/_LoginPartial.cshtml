@using Microsoft.AspNetCore.Identity
@using UndecidedApp.Data.Models.AuthModels
@using UndecidedApp.Shared
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<ul class="navbar-nav ms-auto py-4 py-lg-0">
    <li class="nav-item">
        <NavLink class="nav-link px-lg-3 py-3 py-lg-4" href="/">
            Posts
        </NavLink>
    </li>
    <li class="nav-item">
        <NavLink class="nav-link px-lg-3 py-3 py-lg-4" href="/Thoughts">
            MyBlog
        </NavLink>
    </li>
    <li class="nav-item">
        <NavLink class="nav-link px-lg-3 py-3 py-lg-4" href="/Contact">
            Contact
        </NavLink>
    </li>

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
            <form class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
            <button  type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

</ul>





